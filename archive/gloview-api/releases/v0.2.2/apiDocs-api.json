          "avatarUrl": {
            "type": "string"
          },
          "gender": {
            "type": "string",
            "enum": [
              "MALE",
              "FEMALE",
              "UNKNOWN"
            ]
          },
          "birthdate": {
            "type": "string",
            "format": "date"
          },
          "bio": {
            "type": "string"
          }
        },
        "required": [
          "nickname"
        ]
      },
      "BaseResponseUnit": {
