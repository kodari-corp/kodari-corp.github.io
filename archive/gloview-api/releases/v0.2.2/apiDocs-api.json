          }
        },
        "required": [
          "photoId",
          "url"
        ]
      },
      "BaseResponseMyPhotosResponse": {
        "type": "object",
        "properties": {
          "header": {
            "$ref": "#/components/schemas/ResponseHeader"
          },
          "body": {
            "$ref": "#/components/schemas/MyPhotosResponse"
          }
        },
        "required": [
          "header"
        ]
      },
      "DraftPhotoResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "type": {
            "type": "string",
            "enum": [
              "STANDARD",
              "SPHERICAL_360",
              "PANORAMA",
              "VIRTUAL_TOUR"
            ]
          },
          "thumbnail": {
            "$ref": "#/components/schemas/ThumbnailResponse"
          }
        },
        "required": [
